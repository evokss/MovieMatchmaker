<div class="form-row">
  <div class="form-item">
    <label>Review Title</label>
    <input type="text" name="reviewTitle" value="<%= movie.reviewTitle %>" />
  </div>
  <div class="form-item">
    <label>Movie Title</label>
    <input type="text" name="movieTitle" value="<%= movie.movieTitle %>" />
  </div>
  <div class="form-item">
    <label>Director</label>
    <select name="director">
      <% directors.forEach(director =>{ %> <% if (director.id ===
      movie.director) {%>
      <option
        selected
        label="<%= director.name %>"
        value="<%= director.id %>"
      ></option>
      <% } else { %>
      <option label="<%= director.name %>" value="<%= director.id %>"></option>
      <% } %> <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Poster</label>
    <input type="file" name="poster" class="poster-image filepond" />
  </div>
  <div class="form-item">
    <label>Description</label>
    <textarea name="description"><%= movie.description%></textarea>
  </div>
</div>
